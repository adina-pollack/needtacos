<%= form_for ([@neighborhood, @restaurant]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.label :phone_number %><br>
    <%= f.text_area :phone_number %>
  </p>
  <p>
    <%= f.label :website %><br>
    <%= f.text_area :website %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
