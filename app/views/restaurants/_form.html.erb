<%= form_for ([@neighborhood, @restaurant]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address, :class => "text" %>
  </p>
  <p>
    <%= f.label :phone_number %><br>
    <%= f.text_area :phone_number, :class => "text"  %>
  </p>
  <p>
    <%= f.label :website %><br>
    <%= f.text_area :website, :class => "text"  %>
  </p>
  <p>
    <%= f.submit :class=>"submit"%>
  </p>
<% end %>
