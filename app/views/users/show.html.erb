<h4><%= @user.username %> <span class="smaller"><%= link_to("(edit account)", edit_user_path(@user)) if @current_user == @user %></span></h4>
<h2>Favorite Restaurants</h2>
<% @user.favorites.restaurants.each do |favorite| %>
<h4><%=link_to favorite.restaurant.name, neighborhood_restaurant_path(favorite.restaurant.neighborhood, favorite.restaurant) %></h4>
<% end %>
<% if @user.favorites.restaurants.length == 0 %>
<p>None yet!</p>
<%end%>

<h2>Favorite Tacos</h2>


<% @user.favorites.tacos.each do |favorite| %>
<h4><%=link_to favorite.taco.name, neighborhood_restaurant_path(favorite.taco.restaurant.neighborhood, favorite.taco.restaurant, favorite.taco) %></h4>
<%end%>
<% if @user.favorites.tacos.length == 0 %>
<p>None yet!</p>
<%end%>
